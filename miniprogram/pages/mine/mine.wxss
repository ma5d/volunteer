/* 用户信息 */

.userinfo {
    display: flex;
    align-items: center;
    background-color: #98b2c9;
    height: 300rpx;
    margin-top: 0rpx;
    
}


/* 头像 */

.userinfo-avatar {
    width: 140rpx;
    height: 140rpx;
    margin-left: 48rpx;
    border-radius: 20rpx;
    background: #f5f7f7;
}

.userinfo_right {
    margin-left: 40rpx;
    color: #fff;
}

.userinfo_nickname {
    font-size: 48rpx;
    font-weight: 600;
    line-height: 1;
    display: block;
}

.main {
    height: 40rpx;
    padding: 30rpx 5rpx;
    margin: 20rpx 15rpx;
    background-color: transparent;
    box-sizing: border-box;
    opacity: 0.6;
    font-size: 15px;
    color: #fff;
    line-height: 32rpx;
}

.pia {
    margin-right: 60rpx;
}


.user_info_wrap {
    position: relative;
}

.user_info_wrap .user_img_wrap {
    width: 100vw;
    height: 50vh;
    overflow: hidden;
    background-color: var(--themeColor);
}

.user_info_wrap .user_img_wrap .user_bg {
    width: 100%;
    height: 52vh;
    filter: blur(12rpx);
}

.user_info_wrap .user_img_wrap .user_info {
    position: absolute;
    left: 50%;
    top: 15%;
    transform: translateX(-50%);
}

.user_info_wrap .user_img_wrap .user_info .user_inco {
    width: 150rpx;
    height: 150rpx;
    border-radius: 50%;
    text-align: center;
}

.user_info_wrap .user_img_wrap .user_info .user_name {
    margin-top: 52rpx;
    color: white;
    font-weight: bold;
}

.user_info_wrap .user_img_wrap button {
    margin-top: 220rpx;
}

.user_info_wrap .item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 80rpx;
    padding: 0 20rpx;
    background-color: #ffffff;
    border: 1px solid #f1efef;
    font-size: large;
    margin: 10px 0px;
}